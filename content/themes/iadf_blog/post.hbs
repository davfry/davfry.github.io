{{!< default}}
{{> header}}
<main class="main_iadf small-9 medium-6 columns" role="main">
{{#post}}
<article class="article_iadf" role="article" itemscope itemtype="http://schema.org/Article">
<header class="postheader_iadf">
<time class="date_iadf" datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">{{date published_at format="MMMM DD, YYYY"}}</time>
<h5 class="authorname_iadf"><span itemprop="author">{{author.name}}</span></h5>
<h1 class="posttitle_iadf" itemprop="headline">{{title}}</h1>
</header>
<div class="postcontent_iadf" itemprop="articleBody">
{{content}}
</div>
{{#if tags}}
<div class="posttags_iadf">
Tags: {{tags separator=" "}}
</div>
{{/if}}
    <div class="sharepost_iadf">
    <h4 class="share_iadf">Share this post: </h4>
    <a class="share_iadf icon-twitter" target="_blank" href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}">
      <span class="hidethis_iadf">
        <svg class="svgIcon-use" width="25" height="25" viewBox="0 0 25 25">
          <path d="M21.725 5.338c-.744.47-1.605.804-2.513 1.006a3.978 3.978 0 0 0-2.942-1.293c-2.22 0-4.02 1.81-4.02 4.02 0 .32.034.63.07.94-3.31-.18-6.27-1.78-8.255-4.23a4.544 4.544 0 0 0-.574 2.01c.04 1.43.74 2.66 1.8 3.38-.63-.01-1.25-.19-1.79-.5v.08c0 1.93 1.38 3.56 3.23 3.95-.34.07-.7.12-1.07.14-.25-.02-.5-.04-.72-.07.49 1.58 1.97 2.74 3.74 2.8a8.49 8.49 0 0 1-5.02 1.72c-.3-.03-.62-.04-.93-.07A11.447 11.447 0 0 0 8.88 21c7.386 0 11.43-6.13 11.414-11.414.015-.21.01-.38 0-.578a7.604 7.604 0 0 0 2.01-2.08 7.27 7.27 0 0 1-2.297.645 3.856 3.856 0 0 0 1.72-2.23">
          </path>
        </svg>
      </span>
    </a>
    <a class="share_iadf icon-facebook" target="_blank" href="http://www.facebook.com/sharer.php?u={{url absolute="true"}}">
      <span class="hidethis_iadf">
        <svg class="svgIcon-use" width="25" height="25" viewBox="0 0 25 25">
          <path d="M21 12.646C21 7.65 16.97 3.6 12 3.6s-9 4.05-9 9.046a9.026 9.026 0 0 0 7.59 8.924v-6.376H8.395V12.64h2.193v-1.88c0-2.186 1.328-3.375 3.267-3.375.93 0 1.728.07 1.96.1V9.77H14.47c-1.055 0-1.26.503-1.26 1.242v1.63h2.517l-.33 2.554H13.21V21.6c4.398-.597 7.79-4.373 7.79-8.954">
          </path>
        </svg>
      </span>
    </a>
    </div>
        {{#if author}}
        <footer class="postfooter_iadf">
        <address itemscope itemtype="http://schema.org/Person">
        {{#if author.website}}
        <div class="authorwebsite_iadf"><a href="{{author.website}}" itemprop="url">{{author.website}}</a></div>
        {{/if}}
        </address>
        <div class="authorbio_iadf">
        <p>{{author.bio}}</p>
        </div>
        </footer>
        {{/if}}
</article>
{{/post}}
</main>
